{
  "name": "Copy Jira Commit Message",
  "version": "1.0",
  "description": "Copy Jira Commit Message!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "build/main.js"
      ]
    }
  ],
  "icons": {
    "16": "src/icon/magic-line.png",
    "48": "src/icon/magic-line.png",
    "128": "src/icon/magic-line.png"
  }
}